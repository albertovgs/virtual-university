# Virtual University Docker Environment Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database host (use 'db' for Docker Compose service name)
DB_HOST=db

# Database credentials
DB_USER=learning_user
DB_PASS=learning_pass
DB_NAME=sw15_update

# MySQL root password (for database administration)
MYSQL_ROOT_PASSWORD=root_password

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# CodeIgniter environment (development, testing, production)
CI_ENV=development

# =============================================================================
# WEB SERVER CONFIGURATION
# =============================================================================
# Apache port mapping (host:container)
APACHE_PORT=8080

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable/disable debugging features
DEBUG_MODE=true

# Application base URL (auto-detected in most cases)
# BASE_URL=http://localhost:8080

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Session configuration
SESSION_DRIVER=files
SESSION_SAVE_PATH=

# Encryption key (generate a new one for production)
ENCRYPTION_KEY=

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (0=Disables logging, 1=Error Messages, 2=Debug Messages, 3=Informational Messages, 4=All Messages)
LOG_THRESHOLD=2

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================
# Health check intervals (in seconds)
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=5

# Monitoring thresholds
DISK_THRESHOLD=85
MEMORY_THRESHOLD=90

# Alert configuration (optional)
ALERT_EMAIL=
SLACK_WEBHOOK=

# Auto-restart failed services
AUTO_RESTART=false

# =============================================================================
# PRODUCTION DEPLOYMENT NOTES
# =============================================================================
# For production deployment:
# 1. Change CI_ENV to 'production'
# 2. Set strong passwords for DB_PASS and MYSQL_ROOT_PASSWORD
# 3. Generate a secure ENCRYPTION_KEY
# 4. Set appropriate LOG_THRESHOLD (1 for production)
# 5. Configure BASE_URL if using custom domain
# 6. Consider using external database service
# 7. Set DEBUG_MODE to false
# 8. Configure monitoring alerts (ALERT_EMAIL, SLACK_WEBHOOK)
# 9. Set AUTO_RESTART to true for automatic recovery
# 10. Adjust health check intervals for production load